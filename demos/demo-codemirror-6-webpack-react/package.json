{
  "name": "demo-codemirror-6-webpack-react",
  "private": true,
  "version": "0.0.1-next.0",
  "scripts": {
    "startNoLocal": "cross-env NODE_ENV=\"development\" webpack serve",
    "start": "cross-env NODE_ENV=\"development\" webpack serve --config ./webpack.local.config.js",
    "e2e": "export PORT=5176; playwright test --config=../../playwright.config.js",
    "e2e:selector": "playwright codegen http://localhost:5176",
    "deploy": "npm run clean:deploy && cross-env NODE_ENV=\"production\" webpack",
    "clean:deploy": "rimraf dist",
    "serve": "pm2 serve dist 5176 --spa --name demo5176",
    "unserve": "pm2 delete demo5176"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.1.0",
    "@codemirror/commands": "^6.1.0",
    "@codemirror/language": "^6.2.1",
    "@codemirror/lint": "^6.0.0",
    "@codemirror/search": "^6.1.0",
    "@codemirror/state": "^6.1.1",
    "@codemirror/view": "^6.2.0",
    "@lezer/highlight": "^1.0.0",
    "@neo4j-cypher/codemirror": "*",
    "@neo4j-cypher/react-codemirror": "*",
    "demo-base": "*",
    "demo-base-react": "*",
    "neo4j-driver": "^4.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "glob": "^8.0.3",
    "html-webpack-deploy-plugin": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
