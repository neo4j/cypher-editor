{
  "name": "demo-codemirror-6-webpack-react",
  "private": true,
  "version": "1.0.0-next.1",
  "scripts": {
    "startNoLocal": "cross-env NODE_ENV=\"development\" webpack serve",
    "start": "cross-env NODE_ENV=\"development\" webpack serve --config ./webpack.local.config.js",
    "e2e": "export PORT=5176; playwright test --config=../../playwright.config.js",
    "e2e:selector": "playwright codegen http://localhost:5176",
    "deploy": "npm run clean:deploy && cross-env NODE_ENV=\"production\" webpack",
    "clean:deploy": "rimraf dist",
    "serve": "pm2 serve dist 5176 --spa --name demo5176",
    "unserve": "pm2 delete demo5176"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.3.4",
    "@codemirror/commands": "^6.1.2",
    "@codemirror/language": "^6.3.1",
    "@codemirror/lint": "^6.1.0",
    "@codemirror/search": "^6.2.3",
    "@codemirror/state": "^6.1.4",
    "@codemirror/view": "^6.6.0",
    "@lezer/highlight": "^1.1.3",
    "@neo4j-cypher/codemirror": "1.0.0-next.1",
    "@neo4j-cypher/react-codemirror": "1.0.0-next.1",
    "demo-base": "1.0.0-next.1",
    "demo-base-react": "1.0.0-next.1",
    "neo4j-driver": "5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "file-loader": "^6.2.0",
    "glob": "^8.0.3",
    "html-webpack-deploy-plugin": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.1",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  }
}
