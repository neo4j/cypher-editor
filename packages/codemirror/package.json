{
  "name": "@neo4j-cypher/codemirror",
  "description": "Cypher query language integration with CodeMirror 6 editor",
  "keywords": [
    "cypher",
    "codemirror",
    "codemirror 6"
  ],
  "version": "0.1.0",
  "author": "Neo4j Inc.",
  "license": "GPL-3.0",
  "main": "./lib/codemirror.js",
  "module": "./es/codemirror.js",
  "types": "src/codemirror.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/neo4j-contrib/cypher-editor.git"
  },
  "bugs": {
    "url": "https://github.com/neo4j-contrib/cypher-editor/issues"
  },
  "scripts": {
    "build-lib": "babel --config-file ../../babel.config.js --extensions \".js\" --out-dir lib ./src",
    "build-es": "cross-env ES=true babel --config-file ../../babel.config.js --extensions \".js\" --out-dir es ./src",
    "build": "npm run build-lib && npm run build-es",
    "clean:build": "rimraf lib && rimraf es"
  },
  "files": [
    "src/*.d.ts",
    "css/",
    "es/",
    "lib/",
    "README.md"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.1.0",
    "@codemirror/commands": "^6.1.0",
    "@codemirror/language": "^6.2.1",
    "@codemirror/lint": "^6.0.0",
    "@codemirror/search": "^6.1.0",
    "@codemirror/state": "^6.1.1",
    "@codemirror/view": "^6.2.0",
    "@lezer/highlight": "^1.0.0",
    "@neo4j-cypher/editor-support": "workspace:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-transform-regenerator": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9"
  }
}
